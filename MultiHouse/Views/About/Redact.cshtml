@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_LayoutAdminMH2";
}

<div>
    @if (ViewData["Status"] != null && ViewData["Status"] != "")
            {
              <h3>
                <span class="badge bg-secondary">@ViewData["Status"]</span>
              </h3>
            }
    
    <form enctype="multipart/form-data" action="/About/Redact" method="post">
      <div class="col-sm-6">
        <label for="firstName" class="form-label">Заголовок</label>
        <input required name="Head" type="text" class="form-control" id="firstName" placeholder="" value="">
      </div>
      
      
      <div class="col-6">
        <div>
          подзаголовки для картинок
        </div>
        
        <div class="input-group">
          <input name="label1" type="text" placeholder="подзоголовок 1" class="form-control">
          <input name="label2" type="text" placeholder="подзоголовок 2" class="form-control">
          <input name="label3" type="text" placeholder="подзоголовок 3" class="form-control">
        </div>
        <div class="input-group">
          <input name="Images" type="file" class="btn-info" multiple="multiple">
        </div>
        
        <div class="col-12">
          <div class="input-group">
            <textarea name="Text" class="form-control" placeholder="Текст ..." aria-label="With textarea"></textarea>
          </div>
        </div>
        
        
      </div>
      

      <input type="submit" class="btn-info" value="внести изменения" />

    </form>

