@model HouseRequest

@{
    ViewBag.Title = "title";
    Layout = "_LayoutMH";
    
    
}

<h2>Оставить заявку</h2>

<div>
    
    <div>
        <form method="post" action="/Request/Create" id="hrequest-form">
            @* <div> *@
            @*     <input placeholder="Имя" name="FirstName" /> *@
            @*     <input placeholder="Фамилия" name="LastName" /> *@
            @*     <input placeholder="Отчество" name="Patronymic" /> *@
            @* </div> *@
            
            <div class="input-group">
                <input placeholder="Имя" name="FirstName" class="form-control" />
                <input placeholder="Фамилия" name="LastName" class="form-control" />
                <input placeholder="Отчество" name="Patronymic" class="form-control" />
            </div>
            
            
            <div>
                <input name="Phone" placeholder="номер тел." />
            </div>
            @* <div> *@
            @*     <input name="Suggestions" placeholder="Описание (доп. пожелания)"/> *@
            @* </div> *@
            
            <div>
                <input value="@Model.RoomCount" name="RoomCount" type="number" placeholder="кол-во комнат" />
            </div>
            
            <div>
                <input name="AproximateAddress" placeholder="район"/>
            </div>
            
            <div>
                <input value="@Model.Address" name="Address" placeholder="точный адрес"/>
            </div>
            
            <div>
                Rent:<input name="IsRenting" placeholder="аренда" type="checkbox"/>
                            
            </div>
            
            <div>
                Buy:<input name="IsBuying" placeholder="покупка" type="checkbox"/>
            </div>
            

            <div class="input-group">
                <textarea name="Suggestions" class="form-control" placeholder="Описание (доп. пожелания)" aria-label="With textarea"></textarea>
            </div>
            
            
            <input type="hidden" value="@Model.HouseId" name="houseId" />
            
            

            <input type="submit" value="отправить" class="btn btn-success" />

        </form>
        
        
        <div class="col-md-7 col-lg-8">
                <h4 class="mb-3">Billing address</h4>
                <form class="needs-validation" novalidate="">
                  <div class="row g-3">
                    <div class="col-sm-6">
                      <label for="firstName" class="form-label">First name</label>
                      <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                      <div class="invalid-feedback">
                        Valid first name is required.
                      </div>
                    </div>
        
                    <div class="col-sm-6">
                      <label for="lastName" class="form-label">Last name</label>
                      <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                      <div class="invalid-feedback">
                        Valid last name is required.
                      </div>
                    </div>
                    
                    
                    <div class="col-12">
                      <label for="firstName" class="form-label">Patronymic</label>
                      <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                      <div class="invalid-feedback">
                        Valid first name is required.
                      </div>
                    </div>
                    
                    
                    
                    <div class="col-12">
                      <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                      <input type="email" class="form-control" id="email" placeholder="you@example.com">
                      <div class="invalid-feedback">
                        Please enter a valid email address for shipping updates.
                      </div>
                    </div>
                    
                    
        
                    
        
                    <div class="col-12">
                      <label for="address" class="form-label">точный адрес</label>
                      <input type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
                      <div class="invalid-feedback">
                        Please enter your shipping address.
                      </div>
                    </div>
        
                    <div class="col-12">
                      <label for="address2" class="form-label">район 2 <span class="text-muted">(Optional)</span></label>
                      <input type="text" class="form-control" id="address2" placeholder="Apartment or suite">
                    </div>
        
                    <div class="col-12">
                    
                    </div>
                  
        
                    <hr class="my-4">
        
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="same-address">
                      <label class="form-check-label" for="same-address">покупка</label>
                    </div>
        
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="save-info">
                      <label class="form-check-label" for="save-info">продажа</label>
                    </div>
        
                    <hr class="my-4">
                  
                    <div class="col-12">
                                      
                    </div>
                  
        
                    <h4 class="mb-3">Предпочтительный способ связи</h4>
                    <br/>
        
                    <div class="my-3">
                      <div class="form-check">
                        <input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked="" required="">
                        <label class="form-check-label" for="credit">Credit card</label>
                      </div>
                      <div class="form-check">
                        <input id="debit" name="paymentMethod" type="radio" class="form-check-input" required="">
                        <label class="form-check-label" for="debit">Debit card</label>
                      </div>
                      <div class="form-check">
                        <input id="paypal" name="paymentMethod" type="radio" class="form-check-input" required="">
                        <label class="form-check-label" for="paypal">PayPal</label>
                      </div>
                    </div>
        
                  
        
                    <hr class="my-4">
                  
                  
                  </div>
                  

                </form>
              </div>
        
    </div>
    
</div>