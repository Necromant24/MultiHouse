          {
            <h3 align="center" style="color: #545b62;">
              обьявлений не найдено
            </h3>
          }

          @foreach (var house in @Model)
          {
            <div class="col-lg-4 col-sm-6 portfolio-item">
              <div class="card h-100">
                <a href="/House/HouseView/@house.Id">
                  <img onerror="imgErrorHandler(this)" class="card-img-top" src="/img/houses/mainImg/@house.MainImg" alt="">
                </a>
                <div class="card-body">
                  <h5 class="card-title" align="center">
                    <a href="/House/HouseView/@house.Id">@house.Address</a>
                  </h5>
                  <p class="card-text"></p>
                </div>
              </div>
            </div>
          }

          <script type="text/javascript">
          
          function imgErrorHandler(img){
            img.onerror = null;
            img.src = "/img/nophoto.jpg";
