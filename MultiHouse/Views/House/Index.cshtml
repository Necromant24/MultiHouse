@model List<House>

@{
    ViewBag.Title = "title";
    Layout = "_LayoutMH2";
  
    // https://templates.sitey.ru/startbootstrap-17/index.html
    // template to this
  
}



<div>
    <div class="container">
    
        
    
        <!-- Portfolio Section -->
        <h2>Представляем доступные квартиры</h2>
        
        <div class="container">
          <div>
            <form method="get" action="">
              
              <div class="col-6">
                <input name="Search" class="form-control" placeholder="поиск..." type="text"/>
                
              </div>
              

              <div class="col-2">
                <span>кол-во комнат:</span>
                <input name="RoomCount" list="RoomCount" class="form-control" type="text" placeholder="число"/>
                
                <datalist id="RoomCount">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                  <option>6</option>
                  <option>7</option>
                  <option>8</option>
                </datalist>

              </div>

              <div class="col">
                <div class="input-group mb-3">
                  <div class="input-group-text">
                    <input name="IsBuying" class="form-check-input" style="margin-left: 0px;margin-right: 0px;" type="checkbox" value="" aria-label="Checkbox for following text input">
                  </div>
                  <span>продажа</span>
                </div>

                <div class="input-group mb-3">
                  <div class="input-group-text">
                    <input name="IsRenting" class="form-check-input" style="margin-left: 0px;margin-right: 0px;" type="checkbox" value="" aria-label="Checkbox for following text input">
                  </div>
                  <span>аренда</span>
                </div>
                
              </div>

              



              <input type="submit" class="btn btn-primary" value="поиск"/>
            </form>
          </div>
        </div>
        
        <hr class="my-4" />
    
        <div class="row">
          
          @foreach (var house in @Model)
          {
            <div class="col-lg-4 col-sm-6 portfolio-item">
              <div class="card h-100">
                <a href="/House/HouseView/@house.Id">
                  <img onerror="imgErrorHandler(this)" class="card-img-top" src="/img/houses/mainImg/@house.MainImg" alt="">
                </a>
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="/House/HouseView/@house.Id">@house.Address</a>
                  </h4>
                  <p class="card-text"></p>
                </div>
              </div>
            </div>
          }
          
          <script type="text/javascript">
          
          function imgErrorHandler(img){
            img.onerror = null;
            img.src = "/img/nophoto.jpg";
            console.log('error');
            }
          
          </script>
          
          

        </div>
        
        <hr>
    
        <!-- Call to Action Section -->
        <div class="row mb-4">
          <div class="col-md-8">
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestias, expedita, saepe, vero rerum deleniti beatae veniam harum neque nemo praesentium cum alias asperiores commodi.</p>
          </div>
        </div>
    
      </div>
</div>