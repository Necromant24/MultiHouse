@model House

@{
    ViewBag.Title = "title";
    Layout = "_LayoutMH";
}

<div>
    
    

    @if (@Model.Images.Count > 0)
    {
    <div class="carousel-container">
        
            <!-- Bootstrap 4 -->
            <div id="carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @* <div class="carousel-item active"> *@
                    @*     <img class="img-fluid carousel-img" src="/img/houses/imgs/h3.jpg" alt="..."> *@
                    @* </div> *@
                    @* <div class="carousel-item"> *@
                    @*     <img class="img-fluid carousel-img" src="/img/houses/imgs/h4.jpg" alt="..."> *@
                    @* </div> *@
                    @* <div class="carousel-item"> *@
                    @*     <img class="img-fluid carousel-img" src="/img/houses/imgs/h5.jpg" alt="..."> *@
                    @* </div> *@

                    @{
                        bool first = true;
                    }

                    @foreach (var imgName in @Model.Images.Select(x => x.Name))
                    {
                        if (@first)
                        {
                            <div class="carousel-item active">
                                <img class="img-fluid carousel-img" src="/img/houses/imgs/@imgName" alt="...">
                            </div>
                            first = false;
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="img-fluid carousel-img" src="/img/houses/imgs/@imgName" alt="...">
                            </div>
                        }
                        
                    }




                </div>
                <!-- Элементы управления -->
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Предыдущий</span>
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Следующий</span>
                </a>
            </div>
        
        </div>
    }
    <h3>
        <a href="/Request/CreateView/@Model.Id">
            Подать заявку
        </a>
    </h3>

    <h2>
        @Model.Address
    </h2>

    <p>
        @Model.Description
    </p>
    
    
    <!-- jQuery -->
    <script src="https://itchief.ru/examples/vendors/jquery/jquery-3.3.1.min.js"></script>
    <!-- Popper -->
    <script src="https://itchief.ru/examples/vendors/popper.js/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://itchief.ru/examples/vendors/bootstrap-4.1/js/bootstrap.min.js"></script>

</div>