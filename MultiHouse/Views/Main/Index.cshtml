@model List<House>

@{
    ViewBag.Title = "title";
    Layout = "_LayoutMH";
}


<div>
    <div class="serach-block">
        <div>
            <form  action="/Main" method="post">
                <div class="input-group mb-3">
                    <input type="submit" value="search" class="btn btn-success" />
                    <input type="text" name="Search" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>
                
                <table>
                    <tr>
                        <td>
                            IsRenting 
                        </td>
                        <td>
                            <input name="IsRenting" type="checkbox">
                        </td>
                        <td>
                            IsBuying                         
                        </td>
                        <td>
                            <input name="IsBuying" type="checkbox">
                        </td>
                        
                    </tr>
                </table>
                RoomCount <input type="number" name="RoomCount" placeholder="RoomCount" />
                
            </form>
        </div>
    </div>    
    <hr></hr>
    <br>
    <div class="houses-grid">
        @foreach (var house in Model)
        {
            <div class="house-card">
                <div>
                    <img src="img/houses/mainImg/@house.MainImg" width="100%" height="100%" />
                </div>
                <div>
                    <a href="/Main/House/@house.Id">
                        <h1>
                            @house.Address
                        </h1>
                    </a>
                    
                </div>
            </div>
            
        }
    </div>
</div>

